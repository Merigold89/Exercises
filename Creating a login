class Student:

    def __init__(self, name, last_name, birth_year):
        self.name = name
        self.last_name = last_name
        self.birth_year = birth_year
        self.student_id = name[0] + last_name + birth_year

print("Please enter your login details: \n"
        "Name:")
name = input()
print("Last name:")
last_name = input()
print("Year of birth:")
birth_year = input()

student = Student(name, last_name, birth_year)

print('Your account login is:')
print(student.student_id)
